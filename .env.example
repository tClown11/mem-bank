# AI Memory Bank Environment Configuration
# Copy this file to .env and adjust values for your environment

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_MODE=debug                    # debug, release

# Database Configuration  
DB_HOST=localhost
DB_PORT=5432
DB_USER=mem_bank_user
DB_PASSWORD=mem_bank_password
DB_NAME=mem_bank
DB_SSL_MODE=disable                  # disable, require, verify-full
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5s

# Logging Configuration
LOG_LEVEL=info                       # debug, info, warn, error
LOG_FORMAT=json                      # json, text
LOG_OUTPUT=stdout                    # stdout, stderr, file
LOG_MAX_SIZE=100                     # MB
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28                       # days
LOG_COMPRESS=true

# AI Configuration
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIM=1536
AI_DEFAULT_THRESHOLD=0.8
AI_MAX_CONTEXT_LENGTH=4000
AI_DEFAULT_IMPORTANCE=5
AI_AUTO_SUMMARY=true

# Security Configuration
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRY=24h
BCRYPT_COST=12
RATE_LIMIT=100                       # requests per minute

# CORS Configuration
ALLOWED_ORIGIN_1=http://localhost:3000
ALLOWED_ORIGIN_2=http://localhost:8080
ALLOWED_ORIGIN_3=http://127.0.0.1:3000

# External Services (optional)
OPENAI_API_KEY=your_openai_api_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# Kubernetes (for K8s deployments)
KUBERNETES_NAMESPACE=mem-bank
POSTGRES_SERVICE_HOST=postgres-service
REDIS_SERVICE_HOST=redis-service