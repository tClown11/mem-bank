# Deployment specific gitignore

# Environment-specific configs
*.local.yaml
*.production.yaml
*.staging.yaml
*.dev.yaml

# Secrets and sensitive configs
*-secret.yaml
*-secrets.yaml
secrets/
*.secret.*

# Local overrides
override.yaml
local-*.yaml

# TLS certificates
*.pem
*.key
*.crt
*.cer

# Temporary files
*.tmp
*.temp
temp-*

# Backup files
*.bak
*.backup

# Kustomize builds
kustomization.yaml.tmp

# Helm values files with secrets
values-*.yaml
!values-example.yaml

# Local development
local/
.local/